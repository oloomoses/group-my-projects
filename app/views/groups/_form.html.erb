<div class = "container-fluid main-wraper">
  
  <div class = "row header-nav pb-3">
    <div class = "col-sm">
      <p id="notice"><%= notice %></p>

        <div class = "row">
          <div class = "col">
            <nav class="navbar navbar-dark bg-light navbar-custom">
              <div class="back-arrow">      
                
                <%= link_to groups_path do %>
                  <i class="fa fa-arrow-left"></i>
                <% end %>               
                
              </div>
              <div class="nav-title" href="#">NEW GROUP</div>

              <div class="search">
                Search
              </div>
            </nav> 
          </div> 
        </div>

    </div>
  </div>

  <div class = "row form mt-3">
    <div class = "col-sm">
              <%= form_with(model: group, local: true, html: {multipart: true }) do |form| %>
                    <% if group.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

                        <ul>
                        <% group.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>

                    <div class="form-group">
                      <%= form.text_field :name, class: 'form-control' %>
                    </div>

                    <div class="custom-file">
                      <%= form.file_field :icon, class: 'custom-file-input', id: "inputGroupFile04", accept: 'image/jpg,image/jpeg,image/gif,image/png' %>
                      <label class="custom-file-label" for="inputGroupFile04">Choose file</label>
                    </div>


                    <div class="actions text-center mt-3">
                      <%= form.submit %>
                    </div>
            <% end %>
    </div>
  </div>
</div>
